<% @courses.each do |course| %>
	<div class="w-full flex border-b p-2 border-gray-300">
        <div class="flex flex-col ">
	        <div class="flex justify-between ">
			<div class="flex-none  "></div>
				<div class="flex-initial  ">
					<p class="font-bold text-xl "><%= course.material_name %></p>	
				</div>	
				<!-- Course Feed create options-->
				<div class="flex-initial dropdown dropdown-hover ">
					<button class="flex ln-btn-color ln-btn-hover-color text-sm font-semibold">
						<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve"
						width="16px" height="16px" class="bg-white rounded-md px-1">
						<g><path d="M480,224H288V32c0-17.673-14.327-32-32-32s-32,14.327-32,32v192H32c-17.673,0-32,14.327-32,32s14.327,32,32,32h192v192   c0,17.673,14.327,32,32,32s32-14.327,32-32V288h192c17.673,0,32-14.327,32-32S497.673,224,480,224z"/></g>
						<span tabindex="0" class="mx-2">Créer</span>
					</button>
						<ul tabindex="0" class="dropdown-content menu text-black bg-gray-100 rounded-box">
							<li><%= link_to 'Essentiels', new_course_flash_path(course) %></li>
							<li><%= link_to 'Exercices', root_path %></li>
							
						</ul>						
				</div>
			</div>
			<div class="mt-4">
				<span class="font-bold text-xl"><%= course.title %></span>
			</div>

			<div class="mt-1">
				<%= truncate(strip_tags(course.content.to_s.html_safe), length: 400) %> 
				<span class="ln-btn-color ln-btn-hover-color ">Voir plus</span>
			</div>
            
            <!-- Bottom items of course -->
			<div class="border-t mt-2">
				<div class="flex justify-between my-1">
					<label for="essential-modal" class="flex ml-2 text-md font-semibold modal-button" >
						<svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 100 100" width="20px" height="20px" class="bg-white rounded-md px-1">
							<path d="M22.5,95c-3.584,0-6.5-2.916-6.5-6.5v-73c0-3.584,2.916-6.5,6.5-6.5h41c1.78,0,2.278,1.707,3.5,3	l19.219,18.03C87.366,31.239,88,32.828,88,34.5v54c0,3.584-2.916,6.5-6.5,6.5H22.5z" opacity=".35"/>
							<path fill="#f2f2f2" d="M20.5,93c-3.584,0-6.5-2.916-6.5-6.5v-73C14,9.916,16.916,7,20.5,7h41	c1.78,0,3.502,0.742,4.724,2.035L84.219,28.03C85.366,29.239,86,30.828,86,32.5v54c0,3.584-2.916,6.5-6.5,6.5H20.5z"/>
							<path fill="#d9eeff" d="M20,87V13h40l20,21v53H20z"/>
							<path fill="#40396e" d="M61,15v16c0,1.105,0.895,2,2,2h16l-1-2.653l-15-15.5L61,15z"/>
							<polygon fill="none" stroke="#40396e" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3" points="20.5,13.5 61.5,13.5 79.5,32.5 79.5,86.5 20.5,86.5"/>
							<path fill="#70bfff" d="M66.5,48h-17c-0.828,0-1.5-0.672-1.5-1.5l0,0c0-0.828,0.672-1.5,1.5-1.5h17	c0.828,0,1.5,0.672,1.5,1.5l0,0C68,47.328,67.328,48,66.5,48z"/>
							<path fill="#70bfff" d="M66.5,57h-33c-0.828,0-1.5-0.672-1.5-1.5l0,0c0-0.828,0.672-1.5,1.5-1.5h33	c0.828,0,1.5,0.672,1.5,1.5l0,0C68,56.328,67.328,57,66.5,57z"/>
							<path fill="#70bfff" d="M66.5,75h-33c-0.828,0-1.5-0.672-1.5-1.5l0,0c0-0.828,0.672-1.5,1.5-1.5h33	c0.828,0,1.5,0.672,1.5,1.5l0,0C68,74.328,67.328,75,66.5,75z"/>
							<path fill="#70bfff" d="M50.5,66h-17c-0.828,0-1.5-0.672-1.5-1.5l0,0c0-0.828,0.672-1.5,1.5-1.5h17	c0.828,0,1.5,0.672,1.5,1.5l0,0C52,65.328,51.328,66,50.5,66z"/>
							<path fill="#70bfff" d="M66.5,66h-8c-0.828,0-1.5-0.672-1.5-1.5l0,0c0-0.828,0.672-1.5,1.5-1.5h8c0.828,0,1.5,0.672,1.5,1.5	l0,0C68,65.328,67.328,66,66.5,66z"/>
							<path fill="#70bfff" d="M41.5,48h-8c-0.828,0-1.5-0.672-1.5-1.5l0,0c0-0.828,0.672-1.5,1.5-1.5h8c0.828,0,1.5,0.672,1.5,1.5	l0,0C43,47.328,42.328,48,41.5,48z"/>
						</svg>
						<span class="bg-black ml-2">Essentiels</span> 
					</label>
					<!-- Essential  Feature-->
					<input type="checkbox" id="essential-modal" class="modal-toggle" />
					<div class="modal modal-bottom sm:modal-middle"">
						<div class="modal-box md:w-10/12 md:max-w-4xl text-white bg-black border">
							<div class="flex max-w-screen mx-auto">
								<div class="mx-auto">
								<h1 class="flex items-center">Essentiels de la léçons</h1>
								</div>
							</div>
							<% course.flashes.each do |flash| %>	
								<div tabindex="0" class="collapse border rounded-md my-4"> 
									<div class="collapse-title text-xl font-medium">
										<%= flash.title %> - <small class="ln-btn-color ln-btn-hover-color text-sm py-1 ">Voir plus</small>
									</div>
									<div class="collapse-content"> 
										<%= flash.content %>
									</div>
								</div>
							<% end %>
							<div class="modal-action pb-4">
								<label for="essential-modal" class="btn btn-sm btn-circle absolute ">✕</label>
							</div>
						</div>
					</div>


					<button class=" flex ml-2 text-sm font-semibold">
						<svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 24 24" width="20" height="20" class="bg-white rounded-md px-1">
							<path d="M22.2,2.163a4.992,4.992,0,0,0-4.1-1.081l-3.822.694A4,4,0,0,0,12,3.065,4,4,0,0,0,9.716,1.776L5.9,1.082A5,5,0,0,0,0,6V16.793a5,5,0,0,0,4.105,4.919l6.286,1.143a9,9,0,0,0,3.218,0L19.9,21.712A5,5,0,0,0,24,16.793V6A4.983,4.983,0,0,0,22.2,2.163ZM11,20.928c-.084-.012-.168-.026-.252-.041L4.463,19.745A3,3,0,0,1,2,16.793V6A3,3,0,0,1,5,3a3.081,3.081,0,0,1,.54.049l3.82.7A2,2,0,0,1,11,5.712Zm11-4.135a3,3,0,0,1-2.463,2.952l-6.285,1.142c-.084.015-.168.029-.252.041V5.712a2,2,0,0,1,1.642-1.968l3.821-.7A3,3,0,0,1,22,6Z"/>
						</svg>
						<span class="bg-black ml-1">Exercices</span>
					</button>

					<!-- Exercises feature-->
					<label class=" flex ml-2 text-sm font-semibold" for="user-echange-modal">
						<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve" width="20px" height="20px" class="bg-white rounded-md px-1">
						<g><path d="M480,224H288V32c0-17.673-14.327-32-32-32s-32,14.327-32,32v192H32c-17.673,0-32,14.327-32,32s14.327,32,32,32h192v192   c0,17.673,14.327,32,32,32s32-14.327,32-32V288h192c17.673,0,32-14.327,32-32S497.673,224,480,224z"/></g>
						<span class="bg-black ml-2">Echanges</span>
					</label>

					<!-- Echanges feature-->
					<input type="checkbox" id="user-echange-modal" class="modal-toggle" />
					<div class="modal modal-bottom sm:modal-middle"">
						<div class="modal-box md:w-10/12 md:max-w-4xl text-white bg-black border">
							<div class="flex max-w-screen mx-auto">
								<div class="mx-auto">
								<h1 class="flex items-center">
								<span class="">Votre question doit-etre précise.</span>
								</h1>
								</div>
								<%= link_to 'Posez votre question', new_course_user_echange_path(course), class:"ln-btn-color ln-btn-hover-color" %>
							</div>
							<%# course.user_echanges.each do |echange| %>	
								<div tabindex="0" class="collapse border rounded-md my-4"> 
									<div class="collapse-title text-xl font-medium">
										<%#= echange.title %> - <small class="ln-btn-color ln-btn-hover-color text-sm py-1 ">Voir plus</small>
									</div>
								</div>
							<%# end %>
							<div class="modal-action pb-4">
								<label for="user-echange-modal" class="btn btn-sm btn-circle absolute ">✕</label>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div> 
	</div>
<% end %>