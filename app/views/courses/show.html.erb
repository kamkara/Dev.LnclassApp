<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    

    <%#= render @course %>

    <%#= link_to 'Edit this course', edit_course_path(@course), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%#= button_to 'Destroy this course', course_path(@course), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%#= link_to 'Back to courses', courses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

<main class="container text-white">
  <%= link_to sanitize("&larr; Back to quotes"), courses_path, class:"text-wwhite" %>
  <div class="header">
<!-- Add Course Title -->
    <h1 class="font-bold">
     le titre: <%= @course.title %>
    </h1>
<!-- Add New Flash -->
  <%= link_to "New Flash",
                new_course_flash_card_path(@course),
                class: "bg-blue-500 p-2 text-white font-bold" %>
  </div>
<!-- Render Flash card section -->
  <%= render @flash_cards, course: @course %>
</main>
