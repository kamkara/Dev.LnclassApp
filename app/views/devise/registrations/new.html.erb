
<% @title="Se connecter" %>

<div class="container-fluid" >
  <div class="flex flex-wrap ">
  <div class="m-auto border border-x-slate-300 ">
  <div class="my-2 flex justify-center">
    <p class="text-white font-bold text-2xl uppercase">Lnclass</p>
  </div>
    <div class="flex border-y border-y-slate-300 py-2 px-4 md:-px-32 text-white  justify-center">
      <div class="">
        <span class="">Student</span>
        <!-- 
        <span class=" ml-4">Teacher</span>
        -->
      </div>
    </div>

    <div class="px-4 md:px-32 py-8">
    <h2 class="flex justify-center text-2xl text-white font-bold">Incription </h2>
          
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
      <!-- Error-->
      <%#= form_error_notification(resource: resource) %>
      <div class="py-8 pb-2">
        <div class="py-8 max-w-md">
          <div class="grid grid-cols-1 gap-6">
            <label class="block">
              <span class="text-white">Nom </span>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"Konan ...",
                class:"mt-1 block w-full" %>
                 
            </label>
          </div>
        </div>
        <div class="py-8 max-w-md">
          <div class="grid grid-cols-1 gap-6">
            <label class="block">
              <span class="text-white">Prénom </span>
              <%= f.text_field :last_name,  placeholder:"Ex: Angela ...", class:"mt-1 block w-full" %>
                 
            </label>
          </div>
        </div>

        <div class="mt-8 max-w-md">
          <div class="grid grid-cols-1 gap-6">

            <label class="block">
            <span class="text-gray-700">Ville De Fréquentation</span>
              <%#= f.select :city_name,  %>
                <select class="block w-full mt-1">
                  <option>Corporate event</option>
                  <option>Wedding</option>
                  <option>Birthday</option>
                  <option>Other</option>
                </select>
              </label>
         </div>

          </div>
        </div>
        <div class="py-8 max-w-md">
          <div class="grid grid-cols-1 gap-6">
            <label class="block"> <br>
              <span class="text-white">Série </span>
              <%= f.label :"Je suis en :" , class:"text-white" %> <br>
            <%= f.radio_button :level_name, "Tle A1", class:"bg-white font-bold" %> <span class="text-bold text-white">Tle A1</span>
            <%= f.radio_button :level_name, "Tle A2", class:"bg-white font-bold pl-4" %> <span class="text-bold text-white">Tle A2</span>
            <%= f.radio_button :level_name, "Tle D", class:"bg-white font-bold pl-4" %> <span class="text-bold text-white">Tle D</span>
            <%= f.radio_button :level_name, "Tle C", class:"bg-white font-bold pl-4" %> <span class="text-bold text-white">Tle C</span>
          </div>
                 
            </label>
          </div>
        </div>
        <div class="mt-8 max-w-md">
          <div class="grid grid-cols-1 gap-6">
            <label class="block">
              <span class="text-white">Nom </span>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder:"Kone ...",
                class:"mt-1 block w-full" %>
                 
            </label>
          </div>
        </div>


        <div class="my-20 max-w-md">
          <div class="grid grid-cols-1 gap-6">
            <label class="block">
              <span class="text-white">N° whatsApp </span>
              <%= f.password_field :password, autocomplete: "current-password", placeholder:"Ex: 0584258085", class:"mt-1 block w-full" %> 
            </label>
          </div>
        </div>

        <div class="my-2">
          <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :"Restez connecter à mon compte" , class:"text-white "%>
          <% end %>
        </div>
        <div class="my-4 max-w-md">
          <div class="grid grid-cols-1 gap-6">
            <label class="block my-4">
              <p class="text-white">Cette page est protégée par Google reCAPTCHA pour nous assurer que vous n'êtes pas un robot. </p>
            </label>
          </div>
        </div>
      </div>
      <div class="my-6">
        <%= f.submit "Connexion", class:"bg-blue-500 text-white font-bold p-3 px-6 rounded-full mt-2" %>
      </div>
    <% end %>
   </div>
    
  </div>
  </div>
</div>
