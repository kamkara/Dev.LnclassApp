<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing flash card</h1>

  <%= render "form", flash_card: @flash_card %>

  <%= link_to "Show this flash card", @flash_card, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to flash cards", flash_cards_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>


<main class="container">
  <%= link_to sanitize("&larr; Back to quote"), course_path(@course) %>

  <div class="header">
    <h1>Edit date</h1>
  </div>

  <%= render "form", course: @course, flash_card: @flash_card %>
</main>